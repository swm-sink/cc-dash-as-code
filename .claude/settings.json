{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schema/settings.schema.json",
  "description": "Claude Code settings for spec-driven dashboard development",
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "Bash(python -m pytest:*)",
      "Bash(python -m ruff check:*)",
      "Bash(python -m ruff format:*)",
      "Bash(python -m mypy:*)",
      "Bash(python -m black:*)",
      "Bash(git status:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(python src/app.py:*)",
      "Bash(pip install:*)",
      "Bash(docker:*)"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~:*)",
      "Bash(sudo:*)",
      "Bash(*/.env:*)",
      "Bash(*/secrets/*:*)"
    ],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python -m ruff format {file_path} && python -m ruff check {file_path} --fix"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Executing bash command: {tool_input}'"
          }
        ]
      }
    ]
  },
  "env": {
    "DASH_DEBUG": "true",
    "PYTHONPATH": "src"
  },
  "model": "claude-sonnet-4",
  "statusLine": "Spec-Driven Dashboard Development"
}
